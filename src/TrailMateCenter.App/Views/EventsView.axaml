<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TrailMateCenter.ViewModels"
             x:Class="TrailMateCenter.Views.EventsView"
             x:DataType="vm:MainWindowViewModel">
  <Grid RowDefinitions="Auto,*">
    <Border Background="{DynamicResource PanelBg}" BorderBrush="{DynamicResource PanelBorder}" BorderThickness="0,0,0,1" Padding="10" Classes="panel">
      <StackPanel Orientation="Horizontal" Spacing="12">
        <TextBlock Text="{DynamicResource Ui.Events.Filter}" Foreground="{DynamicResource TextDim}" FontWeight="Bold"/>
        <CheckBox Content="{DynamicResource Ui.Events.FromIsOnly}" IsChecked="{Binding Events.FilterFromIs}"/>
      </StackPanel>
    </Border>
    <ListBox Grid.Row="1" ItemsSource="{Binding Events.Events}" ItemTemplate="{StaticResource EventTemplate}" Margin="12"/>
  </Grid>
</UserControl>
